<!DOCTYPE html>
<html>
	<head>
		<% include ./partials/head %>
	</head>
	<body class="container" ng-app="app" ng-controller="AnimalController">
		<header>
			<% include ./partials/header %>
		</header>
		<main>
			<div class="jumbotron">
				<% if (user) { %>
				<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular.js"></script>
				<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular-route.js"></script>
				<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular-resource.js"></script>
				<script src="/release/ui-grid.min.js"></script>
				<link rel="styleSheet" href="release/ui-grid.min.css"/>
				<script src="/scripts/animals.js"></script>
				<div ng-controller="AnimalController">
					<div class="container">
						<h3>Animals List:</h3>
						<p class="pull-right">
							<a class="btn btn-primary btn-lg" role="button" href="/animals/file" >Download</a>
						</p>
					</div>
					<div ui-grid="gridOptions" ui-grid-selection></div>
					<button type="button" class="btn btn-success" ng-click="selectedLog()">Show selected</button>
				</div>
				<script type="text/ng-template" id='/new.html'>
					<!-- Name -->
					<div class="input-group">
						<span class="input-group-addon">Name</span>
						<input type="text" class="form-control" name="name">
					</div>
					<!-- Species -->
					<div class="input-group">
						<span class="input-group-addon"></span>
						<input type="text" class="form-control" name="">
					</div>
					<!-- Age -->
					<div class="input-group">
						<span class="input-group-addon"></span>
						<input type="text" class="form-control" name="">
					</div>
					<!-- Cage -->
					<div class="input-group">
						<span class="input-group-addon"></span>
						<input type="text" class="form-control" name="">
					</div>
				</script>
				<% } %>
			</div>
		</main>
		<footer>
			<% include ./partials/footer %>
		</footer>
	</body>
</html>